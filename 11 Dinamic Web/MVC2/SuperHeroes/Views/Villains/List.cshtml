@model List<Villain>

<h1>Villain List</h1>

<div>
    <p class="message-text">@TempData["Message"]</p>
</div>

<div class="text-right">
    <a asp-controller="Villain" asp-action="Edit" class="btn btn-primary">New Villain</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>BadActs</th>
            <th>Gender</th>
            <th>HasMinions</th>
            <th colspan="2"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Name</td>
                    <td>@m.BadActs</td>
                    <td>@m.Gender.ToString()</td>
                    <td><input type="checkbox" @(m.HasMinions ? "checked" : "") disabled="disabled" /></td>
                    <td>
                        <a asp-controller="Villains"
                           asp-action="Edit"
                           asp-route-id="@m.Id"
                           class="text-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Villains"
                           asp-action="Delete"
                           asp-route-id="@m.Id"
                           class="text-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No Villains in the town, the world is safe!</td>
            </tr>
        }
    </tbody>
</table>
