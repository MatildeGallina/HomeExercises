@model Villain

<h1>Delete Villain</h1>

<form method="POST" asp-controller="Villains" asp-action="ConfirmDelete" asp-route-id="@Model.Id">
    <div class="form-group">
        <p>Are you sure to remove Villain '@Model.Name'?</p>
    </div>

    <div class="form-group">
        <a asp-controller="Villains" asp-action="List" class="btn btn-default">Undo</a>
        <input type="submit" class="btn btn-danger" value="Confirm" />
    </div>
</form>