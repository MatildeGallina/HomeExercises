@model SuperHero

<form method="POST">
    <h1>New SuperHero</h1>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SecretName" class="control-label"></label>
        <input asp-for="SecretName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Birth" class="control-label"></label>
        <input asp-for="Birth" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Strength" class="control-label"></label>
        <input asp-for="Strength" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="Wealth" class="control-label"></label>
        <input asp-for="Wealth" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label asp-for="CanFly" class="control-label"></label>
        <input asp-for="CanFly" class="form-control" type="checkbox" />
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>

