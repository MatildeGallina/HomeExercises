@model List<Product>

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count > 0)
        {
            @foreach(var p in Model)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Price</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">Nessun Prodotto disponibile</td>
            </tr>
        }
    </tbody>
</table>