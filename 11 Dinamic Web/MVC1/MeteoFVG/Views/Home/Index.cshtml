@{
    ViewData["Title"] = "Home Page";
}

@model List<CityWeather>

<header>
    <h1>Meteo FVG</h1>
    <p>A website where to learn HTML5</p>
    <img src="~/images/cover.jpg" width="200" alt="cover image" />
</header>

<hr>

<main>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>City</th>
                <th>Temperature</th>
                <th>Weather</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count > 0)
            {
                @foreach (var c in Model)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.City</td>
                        <td>@c.Temperature</td>
                        <td>
                            @switch (c.Weather)
                            {
                                case Weather.Cloudy: <img src="~/images/cloud.jpg" width="30" />
                                    break;
                                case Weather.Raing: <img src="~/images/rain.png" width="30" />
                                    break;
                                case Weather.Sunny: <img src="~/images/sunny.png" width="30" />
                                    break;
                                default:
                                    <p>Icon</p>
                                    break;
                            }
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">Nessun Prodotto disponibile</td>
                </tr>
            }
        </tbody>
    </table>
</main>

<aside>
    <h2>We're hiring!</h2>
    <p>
        We are looking for <em>expert</em> weathermen! Join us!
        Call <strong>800.752.752</strong>
    </p>
</aside>

<hr>

<footer>
    <p>Corso IRES 2018 in programmazione .NET</p>
</footer>
